<div class="container background-div" data-controller="edit">
  <button data-action="click->edit#toggle" style="justify-content: right;">Update</button>
  <div class="container d-none" data-edit-target="toEdit">
    <h4>update your profile</h4>
    <% @user_favourites.each do |fav| %>
      <p>
        Favorite Sport: <%= fav.category.sport %>
      </p>
      <%= link_to "delete", favourite_path(fav.id), data: {turbo_method: :delete, confirm: 'Are you sure?' } %>
    <% end %>

    <div>
      <%= form_for(current_user, url: user_profile_path, method: :patch) do |f| %>
        <div>
          <%= f.label :address, notice: 'Your address was successfully updated.'%><br>
          <%= f.text_field :address %>
        </div>

        <div>
          <%= f.label :category_ids, "Select your favorite sports" %><br>
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :sport do |b| %>
            <%= b.check_box %> <%= b.text %><br>
          <% end %>
        </div>

        <%= f.submit "Save" %>
      <% end %>
    </div>
  </div>
</div>

